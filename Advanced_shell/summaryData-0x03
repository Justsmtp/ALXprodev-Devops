#!/bin/bash

# Output CSV file
report_file="pokemon_report.csv"

# CSV header
echo "Name,Height (m),Weight (kg)" > "$report_file"

# Initialize totals and count
total_height=0
total_weight=0
count=0

# Loop through each JSON file in pokemon_data/
for file in pokemon_data/*.json; do
  # Extract fields using jq
  name=$(jq -r '.name' "$file" | sed 's/.*/\u&/') # capitalize
  height_dm=$(jq -r '.height' "$file")
  weight_hg=$(jq -r '.weight' "$file")

  # Convert decimeters to meters, hectograms to kilograms
  height=$(awk "BEGIN {printf \"%.2f\", $height_dm / 10}")
  weight=$(awk "BEGIN {printf \"%.2f\", $weight_hg / 10}")

  # Append to CSV
  echo "$name,$height,$weight" >> "$report_file"

  # Accumulate for average
  total_height=$(awk "BEGIN {print $total_height + $height}")
  total_weight=$(awk "BEGIN {print $total_weight + $weight}")
  count=$((count + 1))
done

# Calculate averages
avg_height=$(awk "BEGIN {printf \"%.2f\", $total_height / $count}")
avg_weight=$(awk "BEGIN {printf \"%.2f\", $total_weight / $count}")

# Display final output
echo ""
echo "CSV Report generated at: $report_file"
echo ""
cat "$report_file"
echo ""
echo "Average Height: $avg_height m"
echo "Average Weight: $avg_weight kg"
